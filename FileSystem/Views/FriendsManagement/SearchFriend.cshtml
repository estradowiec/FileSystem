
@model FileSystem.Models.RepositorySearch
@{
    ViewBag.Title = "Invite Friend";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SearchFriend", "FriendsManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Search the repository to send the invitation to your friends.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.RepositoryName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RepositoryName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Search" />
        </div>
    </div>
}
<hr/>
<div id="searchResultPartial">
    
@Html.Partial("_SearchResultPartial", this.Model)

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

