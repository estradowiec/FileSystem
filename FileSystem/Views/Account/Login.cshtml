@{
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row">
        <div class="page-header">
            <h2>Sign in</h2>
        </div>
        <div class="text-center"><h1><span class="glyphicon glyphicon-user"></span></h1></div>
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="inputEmail1" class="col-md-2 control-label">Email</label>
                <div class="col-md-8">
                    <input type="email" class="form-control" id="inputEmail1" placeholder="Email" />
                </div>
                <div class="col-md-offset-2">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword1" class="col-md-2 control-label">Password</label>
                <div class="col-md-8">
                    <input type="password" class="form-control" id="inputPassword1" placeholder="Password">
                </div>
                <div class="col-md-offset-2">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button type="submit" class="btn btn-primary" onclick="@Html.Action("Authorize", "Account")">Sign in</button>
                    <div class="pull-right">
                        <a href="">Register</a>
                        <a style="margin-left: 10px" href="">Forgot your password?</a>
                    </div>
                </div>

                <div class="col-md-offset-2"></div>
            </div>
        </form>
    </div>
</div>

