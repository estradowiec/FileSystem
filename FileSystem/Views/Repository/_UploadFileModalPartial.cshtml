@using FileSystem.Models
@model UploadFileViewModel

<div class="modal fade" id="uploadFile" tabindex="-1" role="dialog" aria-labelledby="uploadFileLabel" aria-hidden="true">
    @Styles.Render("~/Content/bootstrap-select")
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h2 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-cloud-upload"></span>   Upload File</h2>
            </div>
            <div id="modalBody" class="modal-body">
                @Html.Partial("_UploadFilePartial", Model)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#uploadFile').on('hidden.bs.modal', function(e) {
        location.reload();
    });
</script>