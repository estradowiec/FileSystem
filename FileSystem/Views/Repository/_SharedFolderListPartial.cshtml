@model FileSystem.Models.SharedFoldersViewModel

<style type="text/css">
    #folderListTable tbody tr:hover td {
        background-color: #EBEBEB;
    }
</style>

<table id="folderListTable" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Folder Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var folder in Model.Folders)
        {
            <tr>
                <td>
                    @folder.FolderId
                </td>
                <td>
                    <a href="@Url.Action("FriendsRepositoryData", "Repository", new { folderId = folder.FolderId, repositoryId = Model.RepositoryId, repositoryName = Model.RepositoryName })">@folder.FolderName</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#folderListTable').dataTable({
            'bSortClasses': false,
            "aoColumnDefs": [{ "bSortable": false, "aTargets": ["_all"] }],
            "aoColumns": [{ "bSearchable": false }, { "bSearchable": true }],
            "sDom": 'frt'
        });
    });

</script>